{
  "name": "cost-manager-api",
  "version": "1.0.0",
  "description": "Cost Manager RESTful Web Services",
  "main": "src/users/app.js",
  "scripts": {
    "start:users": "node src/users/app.js",
    "start:costs": "node src/costs/app.js",
    "start:logs": "node src/logs/app.js",
    "start:admin": "node src/admin/app.js",
    "start:all": "concurrently \"npm run start:users\" \"npm run start:costs\" \"npm run start:logs\" \"npm run start:admin\"",
    "start": "npm run start:all"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "mongoose": "^7.8.8",
    "pino": "^10.1.0",
    "pino-http": "^8.3.3",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
